// PADRÃO DE CORES DO WEBSITE

// PADRÕES
color-1 = #101d48
color-2 = #d8157d
color-3 = #dd5632
color-4 = #2acfc1
contrastInside = #743ad0
color-5 = #e2e2e2
color-6 = #999999
contrast = #f5f5f5

@keyframes lineGrowFX {
  from {
    width 0
  }
  to {
    width 100px
  }
}

@keyframes appear {
  from {
    transform translateY(20px)
    opacity 0
  }
  to {
    transform translateY(0)
    opacity 1
  }
}

@keyframes appear-out {
  from {
    transform translateY(0)
    opacity 1
  }
  to {
    transform translateY(20px)
    opacity 0
  }
}

@keyframes pulse {
  from {
    opacity .9
    transform scaleX(1.1)
  }
  to {
    transform scaleX(0)
    opacity 1
  }
}

// FONTS
@font-face
  font-family "Proxima Nova"
  src url('../fonts/Proxima Nova Bold.ttf')
  font-weight bold

@font-face
  font-family "Proxima Nova"
  src url('../fonts/Proxima Nova Extrabold.otf')
  font-weight 800

@font-face
  font-family "Proxima Nova"
  src url('../fonts/Proxima Nova Light.otf')

*
  margin 0px
  padding 0px
  box-sizing border-box

body
  font-size 16px
  margin 0px
  padding 0px
  font-family "Proxima Nova"
  background url('../images/top-bg.jpg') fixed no-repeat 0 0
  background-size 100% 100%

section
  height 100vh
  width 100%
  overflow hidden
  display flex
  align-items center
  flex-direction column

a
  text-decoration none

header
  display flex
  justify-content center
  #top
    background-color transparent
    padding 5px 0px 0px 0px
    z-index 20
    transition all 1s ease
    .container
      padding 2px
    nav
      padding 20px
      ul
        display flex
        list-style none
        justify-content space-between
        li
          &:hover
            a
              font-weight bold
          a
            color contrast
            transition border 1s, color 1s
          .btn-contrast-full
            border 2px solid contrast
            &:hover
              background-color contrast
              color color-3

.fp-viewing-0
  #top
    padding 20px
    padding-top 40px
    background-color transparent
  .btn-contrast-full
    border 2px solid contrast
    background-color transparent
    color contrast
    &:hover
      background-color contrast
      color color-2!important

section
  .divisor
    display block
    .l1
      border-radius 5px
      display inline-block
      height 5px
      width 5px
    .l2
      border-radius 10px
      display inline-block
      height 5px
      transform-origin left
  .fp-tableCell
    opacity 0
    animation appear-out 0.6s ease forwards
  &.active
    .fp-tableCell
      animation appear 1.3s ease forwards 0.4s
    .divisor
      .l2
        animation lineGrowFX 1s ease forwards 0.8s

main
  #inicio
    align-content center
    align-items center
    color contrast
    display flex
    justify-content center
    .container
      width: 90%;
      display flex
      flex-direction column
      height calc(100vh - 100px)
      justify-content space-around
    h2
      font-size 72px
      font-weight normal
    .divisor
      .l1
        background-color color-4
      .l2
        background-color color-2
    p
      margin-top 30px
      margin-bottom 30px
      max-width 50%
    .btn
      padding 15px 17px 15px 17px
      margin-top 50px
      font-weight bold

@media only screen and (max-width 1000px)
  body
    background-size auto auto

  header
    display flex
    justify-content center
    #top
      max-width 100%
      padding 5px 0px 0px 0px !important
      background-color color-3!important
      img
        float left
        margin-left 20px
        max-width 100px
        margin-bottom -20px
        margin-top 5px
      #menu-icon
        padding: 8px;
        width: 50px;
        height: 50px;
        border: 2px solid #f5f5f5;
        margin-top: 5px;
        float: right;
        margin-right: 20px;
        margin-bottom: -20px;
        &.active
          background-color contrast
          .line
            background-color color-3
        .line
          width 100%
          height 2px
          background-color contrast
          display block
          margin-top 20%
      nav
        padding 10px
        margin-top 20px
        display none
        &.active
          display block
        ul
          display flex
          list-style none
          justify-content space-between
          flex-direction column
          padding-top 20px
          li
            padding 5px;
            margin 10px;
            text-align center

  main
    #inicio
      h2
        font-size 50px
      .container
        justify-content: flex-end;
      p
        max-width 100%
      #senai-logo
        margin-top 20px
        max-height 40px
    #nossaMissao
    #missao
      padding-top 10px
    #fale-conosco
      form
        display flex
        width 90%
        flex-direction column
    #inscricoes
      .content
        margin-top: 5%;
        display flex
        align-items center
        flex-direction column
        width 90%
        height 70%
        text-wrap normal
    #grade
      .content
        height 75%
        width 100%
        padding 20px
        display flex
        align-items center
        justify-content space-between
        flex-wrap wrap
        .grades
          cursor pointer
          width: 50%;
          text-align center

