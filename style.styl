// PADRÃO DE CORES DO WEBSITE

// PADRÕES
color-1 = #101d48
color-2 = #d8157d
color-3 = #dd5632
color-4 = #2acfc1
contrastInside = #743ad0
color-5 = #e2e2e2
// EXTRAS
contrast = #f5f5f5

// KEYFRAMES
@keyframes lineGrowFX {
  from {
    width 0px;
  }
  to {
    width 100px;
  }
}

@keyframes appear {
  from {
    margin-top 20px
    opacity 0
  }
  to {
    margin-top 0px
    opacity 1
  }
}

// FONTS
@font-face
  font-family "Proxima Nova"
  src url('../fonts/Proxima Nova Bold.ttf')
  font-weight bold

@font-face
  font-family "Proxima Nova"
  src url('../fonts/Proxima Nova Light.otf')

*
  margin 0px
  padding 0px
  box-sizing border-box

body
  font-size 18px
  margin 0px
  padding 0px
  font-family "Proxima Nova"

section
  height 100%
  width 100%
  overflow hidden
  padding-top 100px
  display flex
  align-items center
  flex-direction column

a
  text-decoration none

.appear
  animation appear 1.5s ease forwards

header
  display flex
  justify-content center
  #top
    position fixed
    padding 20px
    padding-top 40px
    z-index 20
    nav
      padding 20px
      ul
        display flex
        list-style none
        justify-content space-between
        li
          a
            transition border 1s color 1s


.divisor
  display block
  .l1
    border-radius 5px
    display inline-block
    height 5px
    width 5px
  .l2
    animation lineGrowFX 1s ease forwards 0.4s
    border-radius 10px
    display inline-block
    height 5px
          a:hover
            font-weight bold
          .btn-contrast:hover
            color contrastInsident

main
  #inicio
    align-content center
    align-items center
    background url('../images/top-bg.jpg') fixed no-repeat 0 0
    background-size 100% 100%
    color contrast
    display flex
    justify-content center
    .container
      display flex
      flex-direction column
      height calc(100vh - 100px)
      justify-content space-around
      height calc(100vh - 100px)
    h2
      font-size 72px
      font-weight normal
    .divisor
      .l1
        background-color color-4
      .l2
        background-color color-2
    p
      margin-top 30px
      margin-bottom 30px
      max-width 50%

    .btn
      padding 15px 17px 15px 17px
      margin-top 50px
      font-weight bold


@media only screen and (max-width 1000px)
  section
    height calc(100vh - 120px)
    background url('../images/top-bg.jpg') fixed no-repeat 0 0
    background-size 100% 100%
    color contrast
    align-content center
    align-items center
    display flex

@media only screen and (max-width 1000px)
  section
    height calc(100vh - 800px)
  header
    display flex
    justify-content center
    #top
      position fixed
      max-height auto
      max-width 100%
      padding 5px 0px 0px 0px
      background-color rgba(16, 29, 72, 0.8)
      img
        float left
        margin-left 20px
        max-width 100px
        margin-bottom -20px
        margin-top 5px
      #menu-icon
        padding 5px
        width 40px
        height 40px
        border 2px solid contrast
        margin-top 5px
        float right
        margin-right 20px
        margin-bottom -20px
        border-radius 10px
        .line
          width 100%
          height 2px
          background-color contrast
          display block
          margin-top 20%
          &:active
            background-color contrast
            .line
              background-color color-1
      nav
        padding 10px
        margin-top 20px
        display none
          &:active
            display block
            ul
              display flex
              list-style none
              justify-content space-between
              flex-direction column
              padding-top 20px
              li
                padding 5px;
                margin 10px;
                text-align center

  main
    #inicio
      background-size auto auto
      p
        max-width 100%
      #senai-logo
        margin-top 20px
        max-height 40px

//  BOTÕES
.btn
  padding 10px 20px 10px 20px
  border-radius 25px
  font-weight bold
  font-size 16px
  transition all 1s

.btn-contrast
  border 2px solid contrast
  color contrast
  &:hover
    border 2px solid color-2
    background-color transparent
    color color-2

.btn-contrast:hover
  background-color contrast
  color color-2

.btn-contrast-full
  border 2px solid contrast!important
  background-color transparent
  color contrast
  &:hover
    background-color contrast
    color color-2!important
    border none

.title
  margin-top 5%
  &:before
    content "//"

.circle
  border-radius 50%
  z-index -1
  background-color transparent

#equipe
  overflow hidden
  .circle
    border 3px solid color-4
    width 65%
    position absolute
    height: 120vh;
    top: -10vh;
    display flex
    justify-content center

// Nossa Missao
#circleGround
  border-radius 50%
  height 140vh
  position absolute
  width 70%
  border solid 1px color-4
  z-index -1
  left -10vw
  top -20vh
  opacity .5
#missao
  display flex
  flex-direction row
  align-content center
  padding-top 0
  justify-content center
  section
    width 35%
  #missaoL
    img
      width 100%
  #missaoR
    display block!important
    h1
      color #353535
      font-size 65px
      margin-bottom 5%
    .divisor
      margin-bottom 7%
      .l1
        background-color color-4
      .l2
        background-color color-3
    h3
      color color-4
      font-size 24px
      margin-bottom 3%
    p
      color #7f7f7f
      font-size 20px
    .passCircles
      width 20%
      margin-top 25%
      .passCircle
        background-color color-5
        &:hover
          background-color contrastInside
        &:active
          border 2px solid contrastInside
          background-color transparent

.passCircles
  display flex
  height 15px
  flex-direction row
  justify-content space-between
  float right
  position relative
  .passCircle
    width 10px
    height 10px
    border-radius 50%

#passMissao
  display flex
  align-items baseline
  height 50px
  img
    width 3%
    cursor pointer
    margin-left 2%
    &:hover
      width 4%
    &:nth-child(2)
      margin-left 5%


#curso
  background-color contrastInside
  .title
    color contrast
    &:before
      color color-2
  .passCircles
    width 7%
    .passCircle
      background-color contrast
      &:hover
         background-color color-4
      &:active
        border 2px solid color-4
        background-color transparent
  a
    display flex
    flex-direction column
    &:nth-child(1)
      background-color #7f7f7f
    img
      margin-bottom 3%
      width 20px
      height 30px

.viewing-page-2
  a
    color color-2
    &:hover
      border-bottom 3px solid color-4
  .btn-contrast
    border 2px solid color-2
    &:hover
      border 2px solid color-4
      color color-4
.viewing-page-1
  a
    color contrast
    text-decoration none
    &:hover
      padding-bottom  5%
      border-bottom 3px solid color-2

.arrowLeft
  transform rotate(90deg)
.arrowRight
  transform rotate(-90deg)
    width 50%
    position relative
    height 100%
    top -60px

#curso
  background-color color-4
    display flex
    justify-content center
