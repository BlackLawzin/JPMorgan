// PADRÃO DE CORES DO WEBSITE

// PADRÕES
color-1 = #101d48
color-2 = #d8157d
color-3 = #dd5632
color-4 = #2acfc1
contrastInside = #743ad0

// EXTRAS
contrast = white

// KEYFRAMES
@keyframes lineGrowFX {
  from {
    width 0px;
  }
  to {
    width 100px;
  }
}

@keyframes appear {
  from {
    margin-top 20px
    opacity 0
  }
  to {
    margin-top 0px
    opacity 1
  }
}

// FONTS
@font-face
  font-family "Proxima Nova"
  src url('../fonts/Proxima Nova Bold.otf')
  font-weight bold

@font-face
  font-family "Proxima Nova"
  src url('../fonts/Proxima Nova Light.otf')

*
  margin 0px
  padding 0px
  box-sizing border-box

body
  font-size 18px
  margin 0px
  padding 0px
  font-family "Proxima Nova"

section
  height 100vh
  width 100%
  overflow hidden
  padding-top 120px
  display flex
  align-items center
  flex-direction column


a
  text-decoration none
  color contrast

.appear
  animation appear 1.5s ease forwards

header
  display flex
  justify-content center
  #top
    position fixed
    padding 20px
    padding-top 40px
    z-index 20
    nav
      padding 20px
      ul
        display flex
        list-style none
        justify-content space-between
        li
          a:hover
            border-bottom 2px solid contrast
          .btn-contrast:hover
            color contrastInsident

main
  #inicio
    justify-content center
    .container
      display flex
      flex-direction column
      justify-content space-around
      height  100vh
    h2
      font-size 72px
      font-weight normal
    .divisor
      display block
      .l1
        display inline-block
        width 5px
        height 5px
        background-color color-4
      .l2
        display inline-block
        height 5px
        background-color color-2
        animation lineGrowFX 1s ease forwards 0.4s
    p
      margin-top 30px
      margin-bottom 30px
      max-width 50%
    .btn
      padding 5px 7px 5px 7px
      margin-top 50px
      font-weight bold
    background url('../images/top-bg.jpg') fixed no-repeat 0 0
    background-size 100% 100%
    color contrast
    align-content center
    align-items center
    display flex

@media only screen and (max-width 1000px)
  header
    display flex
    justify-content center
    #top
      position fixed
      max-height auto;
      max-width 100%
      padding 5px 0px 0px 0px
      background-color rgba(16,29,72,0.8)
      img
        float left
        margin-left 20px
        max-width 100px
        margin-bottom -20px
      #menu-icon
        padding 5px
        width 40px
        height 40px
        border 2px solid contrast
        margin-top 5px
        float right
        margin-right 20px
        margin-bottom -20px
        .line
          width 100%
          height 2px
          background-color contrast
          display block
          margin-top 20%
      nav
        padding 10px
        margin-top 20px
        display none
        ul
          display flex
          list-style none
          justify-content space-between
          flex-direction column
          padding-top 20px
          li
            padding 5px;
            margin 10px;
            text-align center

  main
    #inicio
      background-size auto auto
      p
        max-width 100%

//  BOTÕES
.btn
  padding 10px 20px 10px 20px
  border-radius 20px
  transition all 0.6s ease
  font-weight bold
  font-size 16px

.btn-contrast
  border 2px solid contrast
  color contrast

.btn-contrast:hover
  background-color contrast
  color contrastInside

.btn-contrast-full
  border 2px solid contrast
  background-color contrast
  color color-2

.btn-contrast-full:hover
  background-color transparent
  color contrast

.title:before
  content "//"

.circle
  border-radius 50%
  z-index -1
  background-color transparent

#equipe
  .circle
    border 3px solid color-4
    width 60%
    position relative
    height 100%
    top -60px